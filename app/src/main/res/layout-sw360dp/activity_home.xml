<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eb7a02">



    <TextView
        android:layout_width="212dp"
        android:layout_height="25dp"
        android:text="Number of Shipment to attempt:"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_gravity="left|top"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pendingtext"
        android:text=""
        android:textColor="#0000FF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="212dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/vrnTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V 2.2"
        android:layout_gravity="right|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" TextView"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textroute"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagedelivery"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnbckgrnddelv"/>


    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagetransfer"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
       android:background="@drawable/btnbckgrndtrsfer"/>


    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagepickup"
        android:layout_marginTop="205dp"
        android:layout_gravity="center_horizontal"
       android:background="@drawable/btnbackgrndpickp"/>


    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagefuel"
        android:layout_marginTop="260dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnbckgrndfuel"/>


    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagesync"
        android:layout_marginTop="317dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnbackground1"/>

    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagerouteclose"
        android:layout_marginTop="380dp"
        android:layout_gravity="center_horizontal"
       android:background="@drawable/btnbckgrndroute"/>


    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagelogout"
        android:layout_marginTop="495dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnbckgrndlogpic"/>
    <ProgressBar
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progressBarMain"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:id="@+id/imagesummary"
        android:layout_marginTop="435dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnbckgrndsummy"/>

    <ImageView
        android:id="@+id/imagehold"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_marginTop="95dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnbckgrndhold" />

</FrameLayout>
